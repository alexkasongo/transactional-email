<mjml>
  <mj-head>
    <mj-title>Transactional Email</mj-title>
    <mj-attributes>
      <mj-font name="Open Sans" href="http://fonts.googleapis.com/css?family=Open+Sans"></mj-font>
      <mj-raw>
        <!-- padding="0" ? -->
      </mj-raw>
      <mj-section padding="0px"></mj-section>
      <mj-image padding="0px"></mj-image>
      <mj-divider padding="0px"></mj-divider>
      <mj-class name="img-bordered" border="2px solid #eeeeee" border-radius="0px"></mj-class>
      <mj-class name="divider-simple" border-width="1px" border-style="solid" border-color="#999999" padding-top="15px" padding="0 25px 10px 25px"></mj-class>
      <mj-class name="divider-large" border-width="3px" border-style="solid" border-color="#eeeeee" padding-top="40px" padding-bottom="20px"></mj-class>
      <mj-class name="section-white" background-color="#ffffff"></mj-class>
    </mj-attributes>
    <mj-style inline="inline">
      html,
      body {
        background-color: lightgrey;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      a {
        color: #333333;
      }
    </mj-style>
  </mj-head>
  <mj-body width="650px">
    <mj-raw>
      <!-- Logo -->
    </mj-raw>
    <mj-section background-color="#f9f9f9">
      <mj-column>
        <mj-image src="https://transactional-email.s3.us-west-2.amazonaws.com/rewards-logo-top.png" alt="Shop rewards" width="600px"></mj-image>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Hi and Thanks -->
    </mj-raw>
    <mj-section mj-class="section-white" padding-top="30px">
      <mj-column>
        <mj-text>Hi Alex,<br /> Thanks for your recent order. Please find all the details below.<br /> If you have any questions, feel free to <a href="mailto:contact@clothes-men.mailjet.com">contact us</a>.</mj-text>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Divider -->
    </mj-raw>
    <mj-section mj-class="section-white">
      <mj-column>
        <mj-divider mj-class="divider-simple"></mj-divider>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Order number -->
    </mj-raw>
    <mj-section mj-class="section-white">
      <mj-column>
        <mj-text><strong>Order number: 123456789</strong></mj-text>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Billing and Shipping addresses -->
    </mj-raw>
    <mj-section mj-class="section-white">
      <mj-column>
        <mj-text>Billing Address<br />
          Alex Tegga<br />
          7127 Money Flow Road<br />
          Seattle,&nbsp; WA&nbsp; 98071
        </mj-text>
      </mj-column>
      <mj-column>
        <mj-text>Billing Address<br />
          Alex Tegga<br />
          7127 Money Flow Road<br />
          Seattle,&nbsp; WA&nbsp; 98071
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Divider -->
    </mj-raw>
    <mj-section mj-class="section-white">
      <mj-column>
        <mj-divider mj-class="divider-simple"></mj-divider>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Items -->
    </mj-raw>
    <mj-section mj-class="section-white">
      <mj-raw>
        <!-- Image -->
      </mj-raw>
      <mj-column vertical-align="middle" width="30%">
        <mj-image padding="25px" align="left" src="https://promotional-email.s3.us-west-2.amazonaws.com/product1.png" alt="{{ item.title }}" width="150px"></mj-image>
      </mj-column>
      <mj-raw>
        <!-- Data -->
      </mj-raw>
      <mj-group vertical-align="middle" width="70%">
        <mj-column>
          <mj-text align="left"><strong>Tire Boot</strong><br /> Size: 10<br /> Quantity: 1</mj-text>
        </mj-column>
        <mj-raw>
          <!-- Price -->
        </mj-raw>
        <mj-column>
          <mj-text align="right"><strong>Price: $1200</strong></mj-text>
        </mj-column>
      </mj-group>
    </mj-section>
    <mj-raw>
      <!-- Divider -->
    </mj-raw>
    <mj-section mj-class="section-white">
      <mj-column>
        <mj-divider mj-class="divider-simple"></mj-divider>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Delivery date and Total amount -->
    </mj-raw>
    <mj-section mj-class="section-white">
      <mj-column width="66%">
        <mj-text>Your estimated delivery date:<br />
