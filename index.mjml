      </mj-column>
      <mj-column width="25%">
        <mj-divider mj-class="divider-simple"></mj-divider>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Suggestions -->
    </mj-raw>
    <mj-section mj-class="section-white" padding-top="30px">
      <mj-raw>
        <!-- Careful with the number of suggestions! -->
      </mj-raw>
      <mj-column>
        <mj-image padding="20px" mj-class="img-bordered" src="https://transactional-email.s3.us-west-2.amazonaws.com/new.png" href="{{ suggestion.link }}" alt="{{ suggestion.title }}"></mj-image>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Footer Divider -->
    </mj-raw>
    </mj-section>
    <mj-raw>
      <!-- Footer -->
    </mj-raw>
